<%= turbo_stream.update "modal_content" do %>
  <%= render(ModalComponent.new) do |c| %>
    <% c.with_header(title: "Invite User", icon: "user-plus-01") do |ch| %>
      <% ch.with_supporting_text { "Invite your team member so they can apply for leave, claims and many more." } %>
    <% end %>

    <% c.with_body do %>
      <%= render partial: "form", locals: { user: @user, form_path: @form_path, form_method: @form_method } %>
    <% end %>

    <% c.with_footer do %>
      <%= button_tag "Invite", form: dom_id(@user, "form"), class: "btn btn--primary" %>
    <% end %>
  <% end %>
<% end %>

<%= turbo_stream.invoke "document.dispatchEvent", args: ["turbo-modal:show"] %>
