<%= simple_form_for(@company, method: :post, url: complete_installation_index_path, html: {
  id: dom_id(@company, "form"),
  class: "form w-full"
}) do |f| %>
  <div class="flex flex-col gap-5">
    <%= f.input :name, support_text: "Normally is the official name", input_html: { class: "w-full" } %>
    <%= f.input :email, support_text: "You will receive product updates if you choose to subscribe", placeholder: "hr@company.com", input_html: { class: "w-full" } %>
    <%= f.input :logo, support_text: "Your company logo will be prominently displayed in email notifications and reports (soon)" %>
  </div>
<% end %>
