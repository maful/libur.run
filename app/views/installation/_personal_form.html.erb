<%= simple_form_for(@employee, method: :post, url: company_installation_index_path, html: {
  id: dom_id(@employee, "form"),
  class: "form w-full"
}) do |f| %>
  <div class="flex flex-col gap-5">
    <%= f.input :name, label: "Name", support_text: "This will be displayed on your profile", input_html: { class: "w-full" } %>
    <%= f.simple_fields_for :account, @employee.account || Account.new, include_id: false do |fe| %>
      <%= fe.input :email, support_text: "You will need this to login and start to manage your team", placeholder: "user@company.com", input_html: { class: "w-full" } %>
      <%= fe.input :password, support_text: "Minimum 8 characters", input_html: { class: "w-full" } %>
    <% end %>
    <%= f.input :avatar, label: "Avatar", support_text: "Update your avatar and this is what you will see in the top navigation" %>
  </div>
<% end %>
