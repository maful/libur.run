<%= simple_form_for(@account, as: :account, method: :patch, url: invitation_accept_path, html: {
  id: dom_id(@account, 'accept_form'),
  class: "form space-y-4 md:space-y-6"
}) do |f| %>
  <%= f.input :password %>
  <%= f.input :password_confirmation %>
  <%= f.button :submit, "Join", class: "btn btn--block btn--primary" %>
  <%= hidden_field_tag :token, @account.invitation_token %>
<% end %>
