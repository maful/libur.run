<%= turbo_stream.update "join_form" do %>
  <h1 class="mb-1 text-xl font-bold leading-tight tracking-tight text-gray-900 md:text-2xl dark:text-white">
    Welcome onboard!
  </h1>
  <p class="font-light text-gray-500">
    Your account is complete now! You will be redirected to the login page in 5 seconds.
  </p>
  <%= tag.div data: {
    controller: "auto-redirect",
    "auto-redirect-path-value": "/#{rodauth.login_route}",
    "auto-redirect-action-value": "replace",
  } %>
<% end %>
